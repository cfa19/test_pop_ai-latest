# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# OpenAI Configuration
OPENAI_API_KEY=sk-...
CHAT_MODEL=gpt-4o-mini

# Voyage AI Configuration (for embeddings)
VOYAGE_API_KEY=pa-...
EMBED_MODEL=voyage-3-large
EMBED_DIMENSIONS=1024

# Intent Classifier Configuration
# Choose between "openai" (default, higher accuracy) or "distilbert" (faster, no API cost)
INTENT_CLASSIFIER_TYPE=distilbert  # openai or distilbert
INTENT_CLASSIFIER_MODEL_PATH=training/models/20260201_203858/final

# Optional: For DistilBERT classifier, ensure you have:
# - transformers and torch installed: pip install transformers torch
# - Model files in the INTENT_CLASSIFIER_MODEL_PATH directory

# Semantic Gate Configuration (Stage 1 Filtering)
SEMANTIC_GATE_ENABLED=true  # Enable/disable semantic gate (default: true)
SEMANTIC_GATE_MODEL=all-MiniLM-L6-v2  # SentenceTransformer model (must match tuning)
SEMANTIC_GATE_TUNING_PATH=training/results/semantic_gate_tuning.json

# Optional: For semantic gate, ensure you have:
# - sentence-transformers and scikit-learn installed: pip install sentence-transformers scikit-learn
# - Tuning results in SEMANTIC_GATE_TUNING_PATH (run tune_semantic_gate.py if missing)

# ===============================
# RAG SETTINGS
# ===============================
RRF_K=60
SIMILARITY_THRESHOLD=0.5
RAG_TOP_K_DOCUMENTS=3
RAG_TOP_K_CONVERSATION=5
SEMANTIC_WEIGHT=0.5

# ===============================
# LLM TEMPERATURE SETTINGS
# ===============================
RAG_TEMPERATURE=0.3
COACHING_TEMPERATURE=0.7
INTENT_CLASSIFIER_TEMPERATURE=0.2
TRANSLATION_TEMPERATURE=0.1
CLIENT_TIMEOUT=30.0
