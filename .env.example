# ===========================================
# Pop Skills AI - Environment Variables
# ===========================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
JWT_ALGORITHM=ES256

# OpenAI (Chat + LLM Classifier fallback)
OPENAI_API_KEY=sk-...
CHAT_MODEL=gpt-4o-mini
CHAT_PROVIDER=openai

# Voyage AI (Embeddings)
VOYAGE_API_KEY=pa-...
EMBED_MODEL=voyage-3-large
EMBED_DIMENSIONS=1024
EMBED_PROVIDER=voyage

# Intent Classifier (ONNX - local, no downloads, no PyTorch)
INTENT_CLASSIFIER_TYPE=onnx
INTENT_CLASSIFIER_MODEL_PATH=training/models/onnx/classifier

# Semantic Gate (Stage 1 Filtering - local ONNX)
SEMANTIC_GATE_ENABLED=true
SEMANTIC_GATE_TUNING_PATH=training/results/semantic_gate_tuning.json

# RAG Settings
RRF_K=60
SIMILARITY_THRESHOLD=0.5
RAG_TOP_K_DOCUMENTS=3
RAG_TOP_K_CONVERSATION=5
SEMANTIC_WEIGHT=0.5

# LLM Temperature Settings
RAG_TEMPERATURE=0.3
COACHING_TEMPERATURE=0.7
INTENT_CLASSIFIER_TEMPERATURE=0.2
TRANSLATION_TEMPERATURE=0.1
CLIENT_TIMEOUT=30.0
